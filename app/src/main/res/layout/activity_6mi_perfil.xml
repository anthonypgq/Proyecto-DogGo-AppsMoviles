<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay10RootDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Contenido scrollable -->
    <ScrollView
        android:id="@+id/scr10DashboardScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lay10BottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/lin10ContenidoDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Mi Perfil -->
            <TextView
                android:id="@+id/txt10Saludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl6Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp" />

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/perfilImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/foto_perfil"
                    android:padding="0dp" />

                <ImageView
                    android:id="@+id/btnCamera"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/subir"
                    android:elevation="4dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="6dp" />
            </FrameLayout>

            <!-- Línea divisoria -->
            <View
                android:id="@+id/vw10DivisorTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                android:layout_marginBottom="12dp" />

            <!-- Nombre completo (label) -->
            <TextView
                android:id="@+id/labelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl6Name"
                android:textSize="14sp"
                android:textColor="@color/Grey"
                android:layout_marginTop="20dp" />

            <!-- Contenedor horizontal para nombre + ícono editar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/valueName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/inp6Name"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/editName"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/lightGrey" />
            </LinearLayout>

            <!-- Línea divisoria -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                android:layout_marginTop="8dp"/>

            <!-- Correo (label) -->
            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl6Correo"
                android:textSize="14sp"
                android:textColor="@color/Grey"
                android:layout_marginTop="32dp" />

            <!-- Contenedor horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/valueEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/inp6Correo"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/editEmail"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/lightGrey" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                android:layout_marginTop="8dp"/>

            <!-- Teléfono (label) -->
            <TextView
                android:id="@+id/labelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl6Telefono"
                android:textSize="14sp"
                android:textColor="@color/Grey"
                android:layout_marginTop="32dp" />

            <!-- Contenedor horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/valuePhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/inp6Telefono"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/editPhone"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/lightGrey" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                android:layout_marginTop="8dp"/>

            <!-- Dirección (label) -->
            <TextView
                android:id="@+id/labelAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl6Direccion"
                android:textSize="14sp"
                android:textColor="@color/Grey"
                android:layout_marginTop="32dp" />

            <!-- Contenedor horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/valueAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/inp6Direccion"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/editAddress"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/lightGrey" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                android:layout_marginTop="8dp"/>


        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/lay10BottomNav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Inicio -->
        <LinearLayout
            android:id="@+id/lin10NavInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img10NavInicio"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/txt10NavInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10NavInicio"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Agenda -->
        <LinearLayout
            android:id="@+id/lin10NavAgenda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img10NavAgenda"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/txt10NavAgenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10NavAgenda"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Chat -->
        <LinearLayout
            android:id="@+id/lin10NavChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img10NavChat"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/txt10NavChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10NavChat"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Perfil  (seleccionado)-->
        <LinearLayout
            android:id="@+id/lin10NavPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img10NavPerfil"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#1E63FF" />

            <TextView
                android:id="@+id/txt10NavPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10NavPerfil"
                android:textSize="12sp"
                android:textColor="#1E63FF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
