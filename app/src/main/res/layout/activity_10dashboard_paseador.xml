<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay10RootDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Contenido scrollable -->
    <ScrollView
        android:id="@+id/scr10DashboardScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lay10BottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/lin10ContenidoDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Saludo -->
            <TextView
                android:id="@+id/txt10Saludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10SaludoHolaAna"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp" />

            <!-- Cards superiores -->
            <LinearLayout
                android:id="@+id/lin10CardsTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="14dp">

                <!-- Card 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/crd10SolicitudesPend"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:id="@+id/lin10SolicitudesPendContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt10SolicitudesPendTitle"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:text="@string/str10CardSolicitudesPendientes"
                            android:textColor="#1A1A1A"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt10SolicitudesPendNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1E63FF"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/crd10PaseosSemana"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:id="@+id/lin10PaseosSemanaContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt10PaseosSemanaTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str10CardPaseosSemana"
                            android:textSize="14sp"
                            android:textColor="#1A1A1A" />

                        <TextView
                            android:id="@+id/txt10PaseosSemanaNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1E63FF"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Línea divisoria -->
            <View
                android:id="@+id/vw10DivisorTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ECECEC"
                android:layout_marginBottom="12dp" />

            <!-- Título sección -->
            <TextView
                android:id="@+id/txt10SolicitudesRecientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10SolicitudesRecientes"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="10dp" />

            <!-- Tarjeta solicitud 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/crd10Solicitud1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:backgroundTint="#FFFFFF"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/lin10Solicitud1Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/lin10Solicitud1Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img10Mascota1"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/perro1"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:id="@+id/lin10Solicitud1Textos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="10dp">

                            <TextView
                                android:id="@+id/txt10Mascota1Nombre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str10MascotaMax"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:id="@+id/txt10Mascota1Detalle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str10MascotaMaxDetalle"
                                android:textSize="13sp"
                                android:textColor="#8A8A8A"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt10Mascota1Precio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str10MascotaMaxPrecio"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#10A84A" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin10Solicitud1Btns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/btn10Solicitud1Rechazar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/str10BtnRechazar"
                            android:textSize="13sp"
                            android:textColor="#FF2D2D"
                            android:background="@android:color/transparent"
                            android:layout_marginEnd="8dp"
                            android:padding="0dp"
                            android:outlineProvider="none"
                            android:backgroundTint="@android:color/transparent"
                            app:strokeColor="#FF2D2D"
                            app:strokeWidth="1.5dp" />

                        <Button
                            android:id="@+id/btn10Solicitud1Aceptar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/str10BtnAceptar"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#10A84A"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta solicitud 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/crd10Solicitud2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:backgroundTint="#FFFFFF"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/lin10Solicitud2Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/lin10Solicitud2Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img10Mascota2"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/perro2"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:id="@+id/lin10Solicitud2Textos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="10dp">

                            <TextView
                                android:id="@+id/txt10Mascota2Nombre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str10MascotaLuna"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:id="@+id/txt10Mascota2Detalle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str10MascotaLunaDetalle"
                                android:textSize="13sp"
                                android:textColor="#8A8A8A"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt10Mascota2Precio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str10MascotaLunaPrecio"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#10A84A" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin10Solicitud2Btns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/btn10Solicitud2Rechazar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/str10BtnRechazar"
                            android:textSize="13sp"
                            android:textColor="#FF2D2D"
                            android:background="@android:color/transparent"
                            android:layout_marginEnd="8dp"
                            android:padding="0dp"
                            android:outlineProvider="none"
                            android:backgroundTint="@android:color/transparent"
                            app:strokeColor="#FF2D2D"
                            app:strokeWidth="1.5dp" />

                        <Button
                            android:id="@+id/btn10Solicitud2Aceptar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/str10BtnAceptar"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#10A84A"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/lay10BottomNav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Inicio (seleccionado) -->
        <LinearLayout
            android:id="@+id/lin10NavInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img10NavInicio"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#1E63FF" />

            <TextView
                android:id="@+id/txt10NavInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10NavInicio"
                android:textSize="12sp"
                android:textColor="#1E63FF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Agenda -->
        <LinearLayout
            android:id="@+id/lin10NavAgenda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img10NavAgenda"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/txt10NavAgenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10NavAgenda"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Chat -->
        <LinearLayout
            android:id="@+id/lin10NavChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img10NavChat"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/txt10NavChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10NavChat"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:id="@+id/lin10NavPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img10NavPerfil"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/txt10NavPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str10NavPerfil"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
