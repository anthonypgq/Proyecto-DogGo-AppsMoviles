<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/walker_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/placeholder_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/walker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Carlos Rodriguez"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/walker_image"
        app:layout_constraintTop_toTopOf="@+id/walker_image" />

    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:src="@android:drawable/btn_star_big_on"
        app:tint="#FFC107"
        app:layout_constraintStart_toStartOf="@+id/walker_name"
        app:layout_constraintTop_toBottomOf="@+id/walker_name" />

    <TextView
        android:id="@+id/walker_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="4.8"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/star_icon"
        app:layout_constraintStart_toEndOf="@+id/star_icon"
        app:layout_constraintTop_toTopOf="@+id/star_icon" />

    <TextView
        android:id="@+id/walker_walks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#E0E0E0"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="15 paseos"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/walker_rating"
        app:layout_constraintStart_toEndOf="@+id/walker_rating"
        app:layout_constraintTop_toTopOf="@+id/walker_rating" />

    <TextView
        android:id="@+id/walker_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="$20/hora"
        app:layout_constraintStart_toStartOf="@+id/star_icon"
        app:layout_constraintTop_toBottomOf="@+id/star_icon" />

    <TextView
        android:id="@+id/walker_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="0.8 km"
        app:layout_constraintBottom_toBottomOf="@+id/walker_price"
        app:layout_constraintStart_toEndOf="@+id/walker_price"
        app:layout_constraintTop_toTopOf="@+id/walker_price" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walker_image" />

</androidx.constraintlayout.widget.ConstraintLayout>