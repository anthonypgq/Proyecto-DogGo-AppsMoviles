<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MiPerfilPaseador">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A" />

        <ImageView
            android:id="@+id/btnEditAll"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_edit"
            app:tint="#2962FF" />
    </RelativeLayout>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerDivider"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Image -->
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F8F9FA" />

                <ImageView
                    android:id="@+id/btnUploadImage"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/edittext_background_rounded"
                    android:backgroundTint="#2962FF"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@color/white" />
            </FrameLayout>

            <!-- Name -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/lblNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="#546E7A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtNombreValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblNombre"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@id/editIconNombre"
                    android:text="Ana García"
                    android:textColor="#1A1A1A"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/editIconNombre"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/txtNombreValue"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit"
                    app:tint="#B0BEC5" />
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txtNombreValue"
                    android:layout_marginTop="12dp"
                    android:background="#F2F2F2" />
            </RelativeLayout>

            <!-- Email -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/lblEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textColor="#546E7A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtEmailValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblEmail"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@id/editIconEmail"
                    android:text="ana@ejemplo.com"
                    android:textColor="#1A1A1A"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/editIconEmail"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/txtEmailValue"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit"
                    app:tint="#B0BEC5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txtEmailValue"
                    android:layout_marginTop="12dp"
                    android:background="#F2F2F2" />
            </RelativeLayout>

            <!-- Bio -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/lblBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biografía"
                    android:textColor="#546E7A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtBioValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblBio"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@id/editIconBio"
                    android:text="Amante de los animales con 3 años de experiencia en el cuidado y paseo de perros. Me especializo en razas grandes y tengo certificación en primeros auxilios caninos."
                    android:textColor="#1A1A1A"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/editIconBio"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit"
                    app:tint="#B0BEC5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txtBioValue"
                    android:layout_marginTop="12dp"
                    android:background="#F2F2F2" />
            </RelativeLayout>

            <!-- Rate -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarifa por hora"
                    android:textColor="#546E7A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtRateValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblRate"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@id/editIconRate"
                    android:text="$ 20.00"
                    android:textColor="#1A1A1A"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/editIconRate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/txtRateValue"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit"
                    app:tint="#B0BEC5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txtRateValue"
                    android:layout_marginTop="12dp"
                    android:background="#F2F2F2" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu_paseador" />

</androidx.constraintlayout.widget.ConstraintLayout>