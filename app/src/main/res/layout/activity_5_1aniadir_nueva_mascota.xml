<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PerfilDuenio">

    <!-- CABECERA SUPERIOR -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Flecha de regreso -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrowback"
            android:padding="4dp" />

        <!-- Texto -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Añadir Nueva Mascota"
            android:textSize="20sp"
            android:textColor="#000000" />

    </LinearLayout>



    <!-- CONTENIDO CON SCROLL-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="24dp"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/topHeader"
        app:layout_constraintBottom_toTopOf="@+id/bottomSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- FOTO DE PERFIL -->
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/perfilImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/foto_perfil"
                    android:padding="0dp" />

                <ImageView
                    android:id="@+id/btnCamera"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/subir"
                    android:elevation="4dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="6dp" />
            </FrameLayout>

            <!-- NOMBRE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl51Nombre"
                android:textColor="@color/black"
                android:layout_marginTop="32dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputNamePet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/inp51Nombre" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- RAZA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl51Raza"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_location_gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputRaza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/inp51Raza" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- EDAD Y PESO -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <!-- EDAD -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl51Edad"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_location_gray">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputEdad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/inp51Edad" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp">
                    <!-- PESO -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl51Peso"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_location_gray">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputPeso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/inp51Peso" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>
            <!-- TAMAñIO -->
            <TextView
                android:text="Tamaño"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/rgTamano"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/tamanoPeq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pequeño"
                    android:button="@null"
                    android:background="@drawable/btn_pet_selector"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>

                <RadioButton
                    android:id="@+id/tamanoMed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mediano"
                    android:button="@null"
                    android:background="@drawable/btn_pet_selector"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>

                <RadioButton
                    android:id="@+id/tamanoGra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grande"
                    android:button="@null"
                    android:background="@drawable/btn_pet_selector"
                    android:padding="12dp"
                    android:textSize="16sp"/>

            </RadioGroup>

            <!-- COMPORTAMIENTO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl51Comportamiento"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputComportamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/inp51Comportamiento"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <!-- SECCIÓN INFERIOR -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="419dp"
        android:layout_height="102dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- BOTÓN -->
        <Button
            android:id="@+id/btnSavePet"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue_text"
            android:text="@string/btn51SavePet"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
