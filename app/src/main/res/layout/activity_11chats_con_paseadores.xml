<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatsConPaseadores">

    <!-- Título -->
    <TextView
        android:id="@+id/txt11TituloMensajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str11TituloMensajes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:id="@+id/lay11BarraBusqueda"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt11TituloMensajes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/crd11Busqueda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:backgroundTint="#F2F2F2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/img11IconBuscar"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#9A9A9A" />

                <EditText
                    android:id="@+id/edt11BuscarConversas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/str11HintBuscarConversaciones"
                    android:textSize="14sp"
                    android:paddingStart="10dp"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#9A9A9A" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Lista -->
    <ScrollView
        android:id="@+id/scr11ListaScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/lay11BarraBusqueda"
        app:layout_constraintBottom_toTopOf="@id/lay11BottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/lin11ContenedorChats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Item 1 -->
            <LinearLayout
                android:id="@+id/lin11ItemChat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img11Avatar1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/lin11Textos1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/txt11Nombre1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str11ChatAnaNombre"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:id="@+id/txt11UltimoMensaje1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str11ChatAnaUltimo"
                        android:textSize="14sp"
                        android:textColor="#8A8A8A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin11Derecha1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/txt11Hora1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str11ChatAnaHora"
                        android:textSize="12sp"
                        android:textColor="#8A8A8A" />

                    <TextView
                        android:id="@+id/txt11Badge1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/str11ChatAnaBadge"
                        android:textSize="11sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:drawable/btn_default"
                        android:backgroundTint="#FF2D2D" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/vw11Div1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />

            <!-- Item 2 -->
            <LinearLayout
                android:id="@+id/lin11ItemChat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img11Avatar2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/lin11Textos2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/txt11Nombre2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str11ChatCarlosNombre"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:id="@+id/txt11UltimoMensaje2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str11ChatCarlosUltimo"
                        android:textSize="14sp"
                        android:textColor="#8A8A8A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt11Hora2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str11ChatCarlosHora"
                    android:textSize="12sp"
                    android:textColor="#8A8A8A" />
            </LinearLayout>

            <View
                android:id="@+id/vw11Div2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />

            <!-- Item 3 -->
            <LinearLayout
                android:id="@+id/lin11ItemChat3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img11Avatar3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/lin11Textos3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/txt11Nombre3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str11ChatMariaNombre"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:id="@+id/txt11UltimoMensaje3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str11ChatMariaUltimo"
                        android:textSize="14sp"
                        android:textColor="#8A8A8A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt11Hora3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str11ChatMariaHora"
                    android:textSize="12sp"
                    android:textColor="#8A8A8A" />
            </LinearLayout>

            <View
                android:id="@+id/vw11Div3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/lay11BottomNav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Inicio -->
        <LinearLayout
            android:id="@+id/lin11NavInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img11NavInicio"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/txt11NavInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str11NavInicio"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Agenda -->
        <LinearLayout
            android:id="@+id/lin11NavAgenda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img11NavAgenda"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/txt11NavAgenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str11NavAgenda"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Chat (seleccionado) -->
        <LinearLayout
            android:id="@+id/lin11NavChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img11NavChat"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#1E63FF" />

            <TextView
                android:id="@+id/txt11NavChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str11NavChat"
                android:textSize="12sp"
                android:textColor="#1E63FF"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:id="@+id/lin11NavPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img11NavPerfil"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/txt11NavPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str11NavPerfil"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>